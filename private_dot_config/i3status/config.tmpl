general {
        output_format = "i3bar"
        separator = ""
        interval = 1
}

order += "disk {{ .home_part }}"
order += "memory"
{{- if eq .chezmoi.hostname "stratofortress" }}
order += "battery all"
order += "wireless wlp3s0"
{{- end }}
order += "tztime local"

disk "{{ .home_part }}" {
        format = "%percentage_used DSK"
}

memory {
        format = "%used/%total MEM"
}

{{- if eq .chezmoi.hostname "stratofortress" }}
battery all {
        format = "%percentage %status"
}

wireless wlp3s0 {
   format_up = "%quality (%essid) Wconn"
   format_down = "W: down"
}
{{- end }}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
