general {
        output_format = "i3bar"
        separator = ""
        interval = 1
}

order += "disk /home/tlopez"
order += "memory"
{{- if eq .chezmoi.hostname "stratofortress" }}
order += "battery all"
{{- end }}
order += "tztime local"

disk "/home/tlopez" {
        format = "%percentage_used DSK"
}

memory {
        format = "%used/%total MEM"
}

{{- if eq .chezmoi.hostname "stratofortress" }}
battery all {
        format = "%percentage %status"
}
{{- end }}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
